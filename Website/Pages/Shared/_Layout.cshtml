<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dino-Diner - @ViewData["Title"]</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div id="header-grid">
        <a asp-page="/Index">
            <div class="banner-image">
            </div>
        </a>
    </div>


    <div class="container body-content">

        <div id="Sidenav" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"> &times;</a>
            <a asp-page="Index">Home</a>
            <a asp-page="DinoDinerMenu">Dino Diner Menu</a>
            <a asp-page="PrivacyPolicy">Privacy Policy</a>
            <a asp-page="About">About Us</a>
        </div>

        <span class="navbar-icon" onclick="openNav()">&#9776; <!-- Results in ☰ --></span>

        <div id="content">
            <hr />
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2019 - DinoDiner</p>
                <div id="footer-grid">
                    <a asp-page="/About">About Us</a>
                    <a asp-page="/DinoDinerMenu">Menu</a>
                    <a asp-page="/PrivacyPolicy">Privacy Policy</a>
                </div>
            </footer>
        </div>
    </div>

    <environment include="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
